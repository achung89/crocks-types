{
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "js", "json"],
    "testRegex": "/tests/.+\\.ts$",
    "transform": {"/tests/.+\\.ts$": "dts-jest/transform"},
    "globals": {
      "_dts_jest_": {
        "enclosing_declaration": true,
        "compiler_options": "./tsconfig.json"
      }
    },
    "reporters": [
      "default",
      "dts-jest/reporter"
    ]
  }